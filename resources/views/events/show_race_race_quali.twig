                                            {% if result.gapToWinner.value %}
                                                + {{ result.gapToWinner.string }}
                                            {% else %}
                                                {{ result.race_time.string }} 
                                            {% endif %}
                                        {% else %}
                                            + {{ result.sessionLaps - result.laps }} R
